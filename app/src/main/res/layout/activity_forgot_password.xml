<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ForgotPasswordActivity"
    android:gravity="center"
    android:background="@drawable/ic_sign_up_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageButton
                android:onClick="btn_back_forget_password"
                android:scaleType="fitCenter"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_back_button_icon"
                android:background="@color/colorAccent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_margin="40dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <EditText
                android:id="@+id/et_email_fpa"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textColor="#000"
                android:hint="Enter your Email address"
                android:textColorHint="#7e7e7e"
                android:background="@drawable/ic_tl_edit_text_box"
                android:gravity="center"
                android:layout_marginBottom="20dp"/>

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_done_button"
                android:background="@color/colorAccent"
                android:scaleType="fitCenter"
                android:id="@+id/bt_resetPassword"/>

        </LinearLayout>



            />

    </LinearLayout>

</LinearLayout>