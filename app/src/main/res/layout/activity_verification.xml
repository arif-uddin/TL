<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.VerificationActivity"
    android:background="@drawable/ic_sign_up_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20sp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageButton
                    android:onClick="btn_back_verification"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_back_button_icon"
                    android:background="@color/colorAccent"/>

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please verify your account,\n Then proceed!"
                    android:textAlignment="center"
                    android:textColor="#ecf0f1"
                    android:textSize="24sp" />

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageButton
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@color/colorAccent"
                android:onClick="enterApp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_done_button" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Resend verification email."
                android:clickable="true"
                android:textColor="#ecf0f1"
                android:gravity="bottom|center"
                android:textSize="17sp"
                android:onClick="resendVerification"
                />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>