<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.RegistrationActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    android:background="@drawable/ic_sign_up_background"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageButton
                android:onClick="btn_back_signup"
                android:scaleType="fitCenter"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_back_button_icon"
                android:background="@color/colorAccent"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:textColor="#ecf0f1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SIGN UP"
                android:textSize="35sp"
                />

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:textColorHint="#8e8e8e"
                android:textColor="#000000"
                android:background="@drawable/ic_tl_edit_text_box"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="First Name"
                android:id="@+id/et_first_name"
                android:gravity="center"
                android:inputType="text"
                />
            <EditText
                android:layout_marginTop="20dp"
                android:textColorHint="#8e8e8e"
                android:textColor="#000000"
                android:background="@drawable/ic_tl_edit_text_box"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/et_last_name"
                android:hint="Last Name"
                android:gravity="center"
                android:inputType="text"
                />

            <EditText
                android:layout_marginTop="20dp"
                android:textColorHint="#8e8e8e"
                android:textColor="#000000"
                android:background="@drawable/ic_tl_edit_text_box"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/et_registration_email"
                android:hint="Email"
                android:gravity="center"
                android:inputType="text"
                />
            <EditText
                android:layout_marginTop="20dp"
                android:textColorHint="#8e8e8e"
                android:textColor="#000000"
                android:background="@drawable/ic_tl_edit_text_box"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Password"
                android:gravity="center"
                android:id="@+id/et_registration_pass"
                android:inputType="textPassword"
                />
            <CheckBox
                android:layout_gravity="center"
                android:id="@+id/cb_show_password_sign_up"
                android:textColor="#ecf0f1"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Show Password"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".7">

                <ImageButton
                    android:id="@+id/bt_registration_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_done_button"
                    android:onClick="register"
                    />

                <com.wang.avi.AVLoadingIndicatorView
                    android:id="@+id/sign_up_indicator"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:indicatorName="BallScaleMultipleIndicator"
                    />

            </LinearLayout>

            <LinearLayout
                android:gravity="center|bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:textColor="#ecf0f1"
                    android:textSize="10sp"
                    android:text="By signing up you agree to our Terms of Service and Privacy Policy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>



        </LinearLayout>




    </LinearLayout>

</LinearLayout>